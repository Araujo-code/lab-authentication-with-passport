<h2>Sign Up</h2>
<hr>
<form action="/signup" method="POST">
    <input type="text" name="email" placeholder="email">
    <input type="password" name="password" placeholder="password">
    <input type="submit" value="Sign Up">
</form>
<hr>
<a href="/login">Log in</a>
<hr>

{{#if message}}
<p><b>{{message}}</b></p>
{{/if}}