<h2>Log in</h2>
<hr>
<form action="/login" method="POST">
    <input type="text" name="email" placeholder="email">
    <input type="password" name="password" placeholder="password">
    <input type="submit" value="Log in">
</form>
<hr>
<a href="/signup">Sign up</a>
<hr>

{{#if message}}
<p><b>{{message}}</b></p>
{{/if}}